<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="classpath:myApp.properties"/>

    <bean
            id="address_1"
            class="org.example.Address_1"
            scope="prototype"
            init-method="init"
            destroy-method="destroy">
        <constructor-arg name="streetName" value="${address_1.streetName}"/>
        <constructor-arg name="buildNumber" value="${address_1.buildNumber}"/>
        <constructor-arg name="flatNumber" value="${address_1.flatNumber}"/>
    </bean>
    <bean
            id="user_1"
            class="org.example.User_1"
            scope="prototype"
            init-method="init"
            destroy-method="destroy">
        <property name="firstName" value="${user_1.firstName}"></property>
        <property name="lastName" value="${user_1.lastName}"></property>
        <property name="phone" value="${user_1.phone}"></property>
        <property name="address" ref="address_1"></property>
    </bean>

</beans>