<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.hw20210929.hibernated20210929.MainController"
      prefHeight="400.0" prefWidth="600.0">
    <children>
        <HBox maxHeight="50.0" prefHeight="50.0">
            <children>
                <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#showDialog" text="Добавить">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="btnEdit" mnemonicParsing="false" text="Изменить">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="btnDelete" mnemonicParsing="false" text="Удалить">
                    <HBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <AnchorPane maxHeight="50.0" prefHeight="50.0" prefWidth="200.0">
            <children>
                <TextField fx:id="txtSearch" prefHeight="25.0" prefWidth="401.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="80.0" />
                <Button fx:id="btnSearch" layoutX="261.0" mnemonicParsing="false" text="Поиск" AnchorPane.rightAnchor="0.0" />
            </children>
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </VBox.margin>
        </AnchorPane>
        <AnchorPane prefHeight="373.0" prefWidth="481.0" VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="tableNotes" prefHeight="400.0" prefWidth="357.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <columns>
                        <TableColumn prefWidth="219.0" text="Дата" />
                        <TableColumn prefWidth="260.0" text="Заметка" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </VBox.margin>
        </AnchorPane>
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <Label fx:id="lblCount" text="Количество заметок:" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
            <VBox.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </VBox.margin>
        </AnchorPane>
    </children>

</VBox>

